@model Vidly.ViewModels.NewRentalViewModel
@{
    ViewBag.Title = "New Rental";
}

<h2>New Rental</h2>

@using (Html.BeginForm("Save", "Rentals"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Rental.CustomerId)
        @Html.DropDownListFor(m => m.Rental.CustomerId, new SelectList(Model.Customers, "Id", "Name"), "Select Customer", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Rental.CustomerId)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Rental.MovieId)
        @Html.DropDownListFor(m => m.Rental.MovieId, new SelectList(Model.Movies, "Id", "Name"), "Select Movies", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Rental.MovieId)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Rental.DateReturned)
        @Html.TextBoxFor(m => m.Rental.DateReturned, new { @class = "form-control", @type = "date" })
        @Html.ValidationMessageFor(m => m.Rental.MovieId)
    </div>

    <div class="form-group">
        @Html.AntiForgeryToken()
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
}

@Html.ActionLink("Back to Rentals", "Index", "Rentals")

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}