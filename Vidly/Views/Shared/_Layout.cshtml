@using Vidly.Views.Shared.Resources
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @lang.appName</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    @Html.Partial("_Navbar")

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <div class="row">

                <div class="col-sm-6">
                    <p>
                        &copy; @DateTime.Now.Year - @lang.appName
                    </p>
                </div>

                <div class="col-sm-6">
                    <p>
                        @lang.developer  <span class="glyphicon glyphicon-heart"></span>
                        By <a href="https://facebook.com/farouk4web" target="_blank">@lang.developerName</a>
                    </p>
                </div>

            </div>
        </footer>
    </div>

    @{
        var isAuthenticated = false;

        if (User.Identity.IsAuthenticated)
        {
            isAuthenticated = true;
        }
    }
    <span id="authenticatState" data-auth-state="@isAuthenticated"></span>


    @Scripts.Render("~/bundles/libs")
    @RenderSection("scripts", required: false)

</body>
</html>
